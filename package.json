{
  "name": "ai-h5-monorepo",
  "version": "0.1.0",
  "description": "Monorepo for the AI H5 chat frontend (Vue 3) and backend (Express + SQLite).",
  "author": "wen.yao",
  "license": "MIT",
  "private": true,
  "keywords": [
    "ai",
    "chat",
    "vue",
    "vite",
    "express",
    "sqlite",
    "monorepo"
  ],
  "engines": {
    "node": ">=20.18.0"
  },
  "workspaces": [
    "wechat-ai-fontend",
    "wechat-ai-backend",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "pnpm -C wechat-ai-fontend dev",
    "dev:backend": "pnpm -C wechat-ai-backend dev",
    "dev:all": "pnpm -C wechat-ai-backend dev & pnpm -C wechat-ai-fontend dev",
    "build:frontend": "pnpm -C wechat-ai-fontend build",
    "preview:frontend": "pnpm -C wechat-ai-fontend preview",
    "gen:openapi": "node scripts/export-openapi.mjs && openapi-typescript wechat-ai-backend/docs/openapi.json -o wechat-ai-fontend/src/types/openapi.d.ts"
  },
  "devDependencies": {
    "openapi-typescript": "^7.9.1"
  }
}
